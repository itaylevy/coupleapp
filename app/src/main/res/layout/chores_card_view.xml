<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chore_card_view"
        style="@style/MyChoresCardView"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        card_view:cardCornerRadius="2dp">

        <ImageView
            android:id="@+id/chore_img_card_src"
            android:layout_width="match_parent"
            android:layout_height="147dp" />

        <ImageView
            android:id="@+id/ic_male_chore_card_view"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="46dp"
            android:layout_marginEnd="68dp"
            android:elevation="20dp"
            android:src="@drawable/male" />

        <ImageView
            android:id="@+id/ic_female_chore_card_view"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="46dp"
            android:layout_marginEnd="12dp"
            android:elevation="20dp"
            android:src="@drawable/female" />

        <TextView
            android:id="@+id/female_counter_chore_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="45dp"
            android:layout_marginEnd="28dp"
            android:elevation="20dp"
            android:text="0"
            android:textColor="@color/whiteColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="42dp"
            android:layout_marginEnd="46dp"
            android:elevation="20dp"
            android:text="|"
            android:textColor="#6795bb"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/male_counter_chore_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="45dp"
            android:layout_marginEnd="54dp"
            android:elevation="20dp"
            android:text="0"
            android:textColor="@color/whiteColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/oval_chore_card_view"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/oval"
            android:elevation="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/gradient" />

        <TextView
            android:id="@+id/txt_title_chores_card"
            style="@style/MyChoresTitleTextAppearance" />

        <TextView
            android:id="@+id/txt_subtitle_chores_card"
            style="@style/MyChoresSubTitleTextAppearance" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/coin1" />

        <TextView
            android:id="@+id/chore_card_coins"
            style="@style/CoinsAmountCardViewStyle" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/chore_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="2dp" />

    </android.support.v7.widget.CardView>
</FrameLayout>